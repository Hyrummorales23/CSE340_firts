<section class="account-management-view">
  <% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>
  <% } else {
    res.redirect('/')
  } %>
  
  <% if (errors && !errors.isEmpty()) { %>
    <ul class="errors">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <div class="account-content">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>

    <div class="account-links">
      <a href="/account/update/<%= locals.accountData.account_id %>" class="management-link">Update Account Information</a>
      
      <% if (locals.accountData.account_type !== "Client") { %>
        <a href="/inv/" class="management-link">Manage Inventory</a>
      <% } %>
    </div>
  </div>
</section>