<section class="login-main">
    <div class="login-container">
        <% if (title) { %>
        <h1><%= title %></h1>
        <%- messages() %>
        <% } else {
          res.redirect('/')
        } %>

        <form class="login-form" action="/account/login" method="post">
            <label for="email">Email:</label>
            <input type="email" id="email" name="account_email" required placeholder="example@email.com" autocomplete="email">

            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password" required placeholder="********" autocomplete="current-password">
            <button type="submit" class="login-button">Login</button>
        </form>

        <p class="signup-link">No account? <a href="/account/register">Sign-up</a></p>
    </div>
</section>