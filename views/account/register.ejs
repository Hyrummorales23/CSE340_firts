<section class="register-main">
    <div class="register-container">
      <% if (title) { %>
      <h1><%= title %></h1>
      <%- messages() %>
      <% } else { %>
      <% res.redirect('/') %>
      <% } %>

      <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
      
      <p class="required-message">* All fields are required *</p>
      <form class="register-form" action="/account/register" method="post">
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required placeholder="First Name" autocomplete="given-name">
  
        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required placeholder="Last Name" autocomplete="family-name">
  
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required placeholder="example@email.com" autocomplete="email">
  
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required 
          placeholder="********" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span id="pwbutton">Show Password</span>

        <p id="password_hint">
            At least 12 characters, with one uppercase, one number, and one special character.
        </p>
        <button type="submit" class="register-button">Register</button>
      </form>
  
      <p class="login-link">Already have an account? <a href="/account/login">Login</a></p>
    </div>
  </section>
  <script src="/js/script.js"></script>