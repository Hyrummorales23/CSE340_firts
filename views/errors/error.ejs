<section>
  <% if (title) { %>
    <h1 class="error-title"><%= title %></h1>
  <% } else { %>
    <h1 class="error-title">Error</h1>
  <% } %>
  
  <div class="error-container">
    <div class="error-content">
      <p class="error-message"><%- message %></p>
      <% if (title === 500 || title === 'Server Error') { %>
        <div class="roadtrip-message">
          <p>Don't worry about this little detour...</p>
          <p>Why not plan your next road trip instead?</p>
        </div>
      <% } else if (title === 404) { %>
        <div class="roadtrip-message">
          <p>You've taken a wrong turn...</p>
          <p>Let's get you back on the road to great deals!</p>
        </div>
      <% } %>
    </div>
  </div>
</section>
  